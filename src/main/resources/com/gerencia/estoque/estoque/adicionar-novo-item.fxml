<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="350" prefWidth="400" spacing="20" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gerencia.estoque.controller.estoque.AdicionarNovoItemController">

    <!-- Título -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #262626;" text="Adicionar Novo Item ao Estoque" />

    <!-- Descrição do Produto -->
    <HBox alignment="CENTER" spacing="10">
        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="101.0" text="Descrição:" />
        <TextField fx:id="descricaoField" prefWidth="250" />
    </HBox>

    <!-- Preço do Produto -->
    <HBox alignment="CENTER" spacing="10">
        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="104.0" text="Preço:" />
        <TextField fx:id="precoField" prefWidth="250" />
    </HBox>

    <!-- Quantidade Inicial -->
    <HBox alignment="CENTER" spacing="10">
        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="103.0" text="Quantidade Inicial:" />
        <TextField fx:id="quantidadeField" prefHeight="25.0" prefWidth="252.0" />
    </HBox>

    <!-- Botões -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#adicionarProduto" style="-fx-background-color: #262626; -fx-text-fill: white;" text="Adicionar" />
        <Button onAction="#fecharJanela" style="-fx-background-color: #262626; -fx-text-fill: white;" text="Cancelar" />
    </HBox>
</VBox>
