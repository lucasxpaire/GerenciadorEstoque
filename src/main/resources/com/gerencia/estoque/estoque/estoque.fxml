<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="estoquePane" alignment="CENTER" prefHeight="600" prefWidth="600" spacing="20"
      style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gerencia.estoque.controller.estoque.EstoqueController">

    <!-- Título -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #262626;" text="Gerenciamento de Estoque" />

    <!-- Botão para Comprar Produto -->
    <Button onAction="#abrirComprarProduto"
            style="-fx-background-color: #262626; -fx-text-fill: white; -fx-font-size: 16px;"
            text="Comprar Produto" />

    <!-- Botão para Gerenciar Estoque -->
    <Button onAction="#abrirEstoque"
            style="-fx-background-color: #262626; -fx-text-fill: white; -fx-font-size: 16px;"
            text="Gerenciar Estoque" />

    <Button onAction="#voltar" text="Voltar" />
</VBox>
