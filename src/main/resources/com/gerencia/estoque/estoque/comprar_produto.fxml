<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="450.0" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gerencia.estoque.controller.estoque.ComprarProdutoController">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Comprar Produto" />

    <!-- Tabela de produtos -->
    <TableView fx:id="tabelaProdutos" prefHeight="167.0" prefWidth="410.0">
        <VBox.margin>
            <Insets bottom="10" left="20" right="20" top="10" />
        </VBox.margin>
        <columns>
            <TableColumn fx:id="colunaNome" prefWidth="209.0" text="Nome" />
            <TableColumn fx:id="colunaPreco" prefWidth="200.0" text="Preço" />
        </columns>
    </TableView>

    <!-- TextFields com informações do produto -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Nome:" />
        <TextField fx:id="campoNome" editable="false" prefWidth="150" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Preço:" />
        <TextField fx:id="campoPreco" editable="false" prefWidth="100" />
    </HBox>

    <!-- Controle de quantidade -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Quantidade:" />
        <Button onAction="#decrementarQuantidade" text="-" />
        <TextField fx:id="campoQuantidade" prefWidth="50" text="1" />
        <Button onAction="#incrementarQuantidade" text="+" />
    </HBox>

    <!-- Botões de ação -->
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#confirmarCompra" text="Confirmar Compra" />
        <Button onAction="#fecharJanela" text="Cancelar" />
    </HBox>
</VBox>
