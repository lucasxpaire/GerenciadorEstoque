<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gerencia.estoque.controller.estoque.VisualizarEstoqueController">
    <Text style="-fx-font-size: 24px; -fx-text-fill: #000000;" text="Visualizar Estoque" />

    <TableView fx:id="tableViewEstoque" minWidth="600.0" prefWidth="600.0" maxWidth="600.0">
        <columns>
            <!-- Coluna ID (não editável, mas visível) -->
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>

            <!-- Coluna Nome do Produto -->
            <TableColumn fx:id="colNomeProduto" text="Nome do Produto" prefWidth="200.0">
                <cellValueFactory>
                    <PropertyValueFactory property="nome" />
                </cellValueFactory>
            </TableColumn>

            <!-- Coluna Categoria -->
            <TableColumn fx:id="colCategoria" text="Categoria" prefWidth="150.0">
                <cellValueFactory>
                    <PropertyValueFactory property="categoria" />
                </cellValueFactory>
            </TableColumn>

            <!-- Coluna Quantidade -->
            <TableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="100.0">
                <cellValueFactory>
                    <PropertyValueFactory property="quantidade" />
                </cellValueFactory>
            </TableColumn>

            <!-- Coluna Preço -->
            <TableColumn fx:id="colPreco" text="Preço" prefWidth="100.0">
                <cellValueFactory>
                    <PropertyValueFactory property="preco" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Button onAction="#voltar" text="Voltar" />
</VBox>
