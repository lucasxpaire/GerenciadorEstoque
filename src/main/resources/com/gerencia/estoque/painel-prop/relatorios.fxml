<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.gerencia.estoque.controller.relatorio.RelatoriosController">
    <top>
        <Label text="Relatórios" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;" alignment="CENTER"/>
    </top>
    <center>
        <TabPane>
            <!-- Relatório de Transações -->
            <Tab text="Transações">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="tabelaTransacoes">
                        <columns>
                            <TableColumn text="ID" fx:id="colunaIdTransacao"/>
                            <TableColumn text="Produto" fx:id="colunaProduto"/>
                            <TableColumn text="Quantidade" fx:id="colunaQuantidade"/>
                            <TableColumn text="Preço" fx:id="colunaPreco"/>
                            <TableColumn text="Data/Hora" fx:id="colunaDataHora"/>
                        </columns>
                    </TableView>
                    <HBox spacing="20" alignment="CENTER">
                        <Button text="Ver Mais Vendidos" fx:id="btnMaisVendidos"/>
                        <Button text="Ver Mais Comprados" fx:id="btnMaisComprados"/>
                    </HBox>
                </VBox>
            </Tab>

            <!-- Relatório de Demanda -->
            <Tab text="Demanda">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="tabelaDemanda">
                        <columns>
                            <TableColumn text="Cliente" fx:id="colunaClienteDemanda"/>
                            <TableColumn text="Item Demandado" fx:id="colunaItemDemandado"/>
                            <TableColumn text="Quantidade" fx:id="colunaQuantidadeDemandada"/>
                            <TableColumn text="Última Data" fx:id="colunaUltimaDataDemanda"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Relatório de Descontos Aplicados -->
            <Tab text="Descontos Aplicados">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="tabelaDescontos">
                        <columns>
                            <TableColumn text="ID Desconto" fx:id="colunaIdDesconto"/>
                            <TableColumn text="Descrição" fx:id="colunaDescricaoDesconto"/>
                            <TableColumn text="Quantidade Aplicada" fx:id="colunaQtdAplicada"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Relatório de Pontuação de Clientes -->
            <Tab text="Pontuação de Clientes">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="tabelaPontuacaoClientes">
                        <columns>
                            <TableColumn text="ID Cliente" fx:id="colunaIdClientePontuacao"/>
                            <TableColumn text="Nome" fx:id="colunaNomeClientePontuacao"/>
                            <TableColumn text="Pontuação" fx:id="colunaPontuacao"/>
                            <TableColumn text="Compras feitas" fx:id="colunaComprasFeitas"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
