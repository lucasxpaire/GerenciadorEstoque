<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.gerencia.estoque.controller.transacao.CadastroClienteController"
          alignment="CENTER"
          hgap="10"
          vgap="10">

    <!-- Definindo margens para o formulário -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Label e campo para Nome -->
    <Label text="Nome:"/>
    <TextField fx:id="tfNome" GridPane.columnIndex="1" prefWidth="250"/>

    <!-- Label e campo para CPF -->
    <Label text="CPF:" GridPane.rowIndex="1"/>
    <TextField fx:id="tfCpf" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="250"/>

    <!-- Botão de Salvar -->
    <HBox spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="2" alignment="CENTER_RIGHT">
        <Button text="Salvar" onAction="#handleSalvar"/>
    </HBox>
</GridPane>
