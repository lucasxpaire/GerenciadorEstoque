    <TextField fx:id="tfNome" GridPane.columnIndex="1"/>
    <Label text="CPF:" GridPane.rowIndex="1"/>
    <TextField fx:id="tfCpf" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
