<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gerencia.estoque.controller.transacao.ResumoTransacaoController"
      alignment="CENTER" spacing="20" style="-fx-padding: 20;">
    <Label text="Resumo da Venda" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Produto:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="lblProduto" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Cliente:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="lblCliente" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Quantidade:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="lblQuantidade" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Total:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Label fx:id="lblTotal" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="20">
        <Button text="Finalizar" onAction="#handleFinalizar" />
        <Button text="Cancelar" onAction="#handleCancelar" />
    </HBox>
</VBox>