<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gerencia.estoque.controller.RemoverItemEstoqueController">
    <Text style="-fx-font-size: 24px; -fx-text-fill: #000000;" text="Remover Item do Estoque" />

    <Label text="Selecione o Item:" />
    <ComboBox fx:id="comboBoxItens" minWidth="300.0" prefWidth="300.0" maxWidth="300.0" onAction="#exibirDetalhesItem" />

    <VBox spacing="10" alignment="CENTER">
        <Label text="Nome do Produto:" />
        <TextField fx:id="nomeProduto" minWidth="200.0" prefWidth="200.0" maxWidth="300.0" promptText="Nome do produto" />

        <Label text="Quantidade Disponível:" />
        <TextField fx:id="quantidadeProduto" minWidth="200.0" prefWidth="200.0" maxWidth="300.0" promptText="Quantidade disponível" />

        <Label text="Categoria do Produto:" />
        <TextField fx:id="categoriaProduto" minWidth="200.0" prefWidth="200.0" maxWidth="300.0" promptText="Categoria do produto" />

        <Label text="Preço do Produto:" />
        <TextField fx:id="precoProduto" minWidth="200.0" prefWidth="200.0" maxWidth="300.0" promptText="Preço do produto" />

        <Label text="Quantidade a Remover:" />
        <TextField fx:id="quantidadeRemoverProduto" minWidth="200.0" prefWidth="200.0" maxWidth="300.0" promptText="Digite a quantidade" />
    </VBox>

    <Button text="Remover Item" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #262626; -fx-text-fill: #FFFFFF;" onAction="#removerProduto" />
    <Button onAction="#voltarPainelAdm" text="Voltar" />
</VBox>
