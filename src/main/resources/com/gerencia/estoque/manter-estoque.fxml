<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gerencia.estoque.controller.ManterEstoqueController">
    <Text style="-fx-font-size: 24px; -fx-text-fill: #000000;" text="Gerenciar Estoque" />

    <Button text="Cadastrar Produto" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #262626; -fx-text-fill: #FFFFFF;" onAction="#goToCadastrarProduto" />
    <Button text="Editar Produto" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #262626; -fx-text-fill: #FFFFFF;" onAction="#goToEditarProduto" />
    <Button text="Remover Produto" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #262626; -fx-text-fill: #FFFFFF;" onAction="#goToRemoverProduto" />
    <Button text="Visualizar Estoque" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #262626; -fx-text-fill: #FFFFFF;" onAction="#goToVisualizarEstoque" />

    <Button onAction="#voltarPainelAdm" text="Voltar" />
</VBox>
