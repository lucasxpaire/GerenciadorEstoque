<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="600.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gerencia.estoque.controller.ExcluirClienteController">
    <Text style="-fx-font-size: 24px; -fx-text-fill: #000000;" text="Excluir Cliente" />

    <Label text="Selecione o Cliente para Excluir:" />
    <ComboBox fx:id="comboBoxClientes" minWidth="300.0" prefWidth="300.0" maxWidth="300.0" />

    <Button text="Excluir" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #FF0000; -fx-text-fill: #FFFFFF;" onAction="#excluirCliente" />
    <Button onAction="#voltarPainelAdm" text="Voltar" />
</VBox>
