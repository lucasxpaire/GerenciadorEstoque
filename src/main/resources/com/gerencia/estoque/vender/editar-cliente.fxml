<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gerencia.estoque.controller.EditarClienteController">
    <Text style="-fx-font-size: 24px; -fx-text-fill: #000000;" text="Editar Cliente" />

    <Label text="Selecione o Cliente:" />
    <ComboBox fx:id="comboBoxClientes" minWidth="300.0" prefWidth="300.0" maxWidth="300.0" onAction="#exibirDetalhesCliente" />

    <VBox spacing="10" alignment="CENTER">
        <Label text="Nome Completo:" />
        <TextField fx:id="campoNome" minWidth="200.0" prefWidth="200.0" maxWidth="300.0" promptText="Digite o nome do cliente" />

        <Label text="Telefone:" />
        <TextField fx:id="campoTelefone" minWidth="200.0" prefWidth="200.0" maxWidth="300.0" promptText="Digite o telefone" />

        <Label text="CPF:" />
        <TextField fx:id="campoCpf" minWidth="200.0" prefWidth="200.0" maxWidth="300.0" promptText="Digite o CPF" />
    </VBox>

    <Button text="Salvar Alterações" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #262626; -fx-text-fill: #FFFFFF;" onAction="#salvarAlteracoes" />
    <Button onAction="#voltarPainelAdm" text="Voltar" />
</VBox>
